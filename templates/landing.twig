{% extends "layout.twig" %}

{% block title %}TicketFlow - Streamline Your Support{% endblock %}

{% block content %}
<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
    <!-- Navigation -->
    <nav class="px-6 lg:px-12 py-6 flex justify-between items-center">
        <div class="flex items-center gap-3">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
            </svg>
            <span class="text-2xl font-bold text-gray-900">TicketFlow</span>
        </div>
        <div class="flex gap-4">
            <a href="?page=login" class="px-6 py-2 text-gray-700 hover:text-indigo-600 font-medium transition-colors">Login</a>
            <a href="?page=signup" class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all font-medium">Get Started</a>
        </div>
    </nav>

    <!-- Hero Content -->
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20">
        <div class="text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
                Streamline Your
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">Support Tickets</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
                Manage, track, and resolve support tickets with ease. Built for teams that care about efficiency and customer satisfaction.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="?page=signup" class="px-8 py-4 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-all shadow-lg hover:shadow-xl font-semibold text-lg">
                    Start Free Trial
                </a>
                <a href="#features" class="px-8 py-4 bg-white text-gray-700 rounded-xl hover:bg-gray-50 transition-all border border-gray-200 font-semibold text-lg">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose TicketFlow?</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Powerful features designed to streamline your ticket management process
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all border border-gray-200">
                <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 rounded-xl bg-green-100">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Easy Tracking</h3>
                </div>
                <p class="text-gray-600 leading-relaxed">Keep all your tickets organized in one place with intuitive status management and real-time updates.</p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all border border-gray-200">
                <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 rounded-xl bg-blue-100">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Save Time</h3>
                </div>
                <p class="text-gray-600 leading-relaxed">Resolve issues faster with our streamlined workflow, automated notifications, and priority system.</p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all border border-gray-200">
                <div class="flex items-center gap-4 mb-4">
                    <div class="p-3 rounded-xl bg-purple-100">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Team Collaboration</h3>
                </div>
                <p class="text-gray-600 leading-relaxed">Work together seamlessly with shared ticket visibility, comments, and assignment features.</p>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="bg-gradient-to-r from-indigo-600 to-purple-600 py-20">
    <div class="max-w-4xl mx-auto text-center px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white mb-4">Ready to Get Started?</h2>
        <p class="text-xl text-indigo-100 mb-8">Join thousands of teams already using TicketFlow to streamline their support process.</p>
        <a href="?page=signup" class="inline-flex px-8 py-4 bg-white text-indigo-600 rounded-xl hover:bg-gray-100 transition-all font-semibold text-lg shadow-lg">
            Create Your Account
        </a>
    </div>
</div>

<!-- Footer -->
<footer class="px-6 lg:px-12 py-12 bg-gray-900 text-white">
    <div class="max-w-6xl mx-auto text-center">
        <p>&copy; 2024 TicketFlow. All rights reserved.</p>
    </div>
</footer>
{% endblock %}